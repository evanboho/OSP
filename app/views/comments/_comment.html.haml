.featurebox.comment{data: { comment_id: comment.id, approved: comment.approved?.to_s }}
  .approved
    %h5
      = comment.title
    %p
      = comment.content
    .date
      = comment.name.present? ? "Left by #{comment.name}" : "Left"
      = "#{time_ago_in_words(comment.created_at)} ago"
    - if current_user?
      .left
        = render 'admin/links', :resource => comment
