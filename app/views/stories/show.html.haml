= content_for :title do
  = @story.title

= content_for :caption do
  #caption.show
    %h2
      = @story.title.titleize

= content_for :story_body do
  .featurebox
    .body
      = raw @story.body
    .links-left
      - if current_user?
        = render 'admin/links', resource: @story
      - else
        = link_to "Read another story", read_story_path, :class => 'button'
    .date
      = "Submitted #{time_ago_in_words(@story.created_at)} ago"
      %br
      = "Approved by #{@story.approver_email}" if current_user? && @story.admin.present?
    %hr
      - if current_user?
        %h3#unapproved-comments-count
          = "unapproved comments(<span class='count'>#{@story.comments.unapproved.count}</span>)".html_safe
        .box#unapproved-box
          = render :partial => 'comments/comment', collection: @story.comments.unapproved, :as => :comment

        %hr
        %h3#approved-comments-count
          = "approved comments(<span class='count'>#{@story.comments.approved.count}</span>)".html_safe
        .box#approved-box
          = render :partial => 'comments/comment', collection: @story.comments.approved, :as => :comment

        %hr
      - elsif @comments.count > 0
        %h3#approved-comments-count
          = "comments(#{@comments.count})"
        .box#approved-box
          = render :partial => 'comments/comment', :collection => @comments, :as => :comment
        %hr
      %h3 leave a comment
      %div.box
        = render 'comments/fields', :comment => @comment, :path => comments_path, :story => @story
