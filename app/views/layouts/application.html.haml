%html
  %head
    %title Our Story Project
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
    = csrf_meta_tags
  %body
    #main
      #bgimage
        .container
          %header
            %nav
              #logo
                = link_to image_tag "osp-logo.png"
              %ul
                %li
                  = link_to "Stories of Healing", "#"
                %li
                  = link_to "Resources", "#"
                %li
                  = link_to "Contact Us", "#"
                %li
                  = link_to "Search", "#"

          #caption
            = yield :caption if content_for?(:caption)
        .container
          .blank-middle
          .featurebox
            = yield :featurebox if content_for?(:featurebox)
          .featurebox
            = image_tag "fssbanner.png"
          -# yield


        .container
          %footer
            %nav
              %ul
                %li
                  %span
                    Copyright Â© 2012 -
                    = link_to "Family Shelter Service", "http://familyshelterservice.org"
                %li
                  %span
                    605 East Roosevelt Road, Wheaton, IL
                %li
