%span#signed-in-user
  Logged in as
  = link_to current_user.email, current_user
  |
  = link_to "log out", sign_out_path
#logo
  = link_to image_tag("osp-logo.png"), root_path
%ul.topnav
  %li
    %a.drop#stories Stories
    %ul.subnav#stories-subnav
      %li
        = link_to "Approved (#{@approved_story_count})", admin_approved_stories_path
      %li
        = link_to "Unapproved (#{@unapproved_story_count})", admin_unapproved_stories_path if @unapproved_story_count #&& @unapproved_story_count > 0
      - if @unapproved_comments_count && @unapproved_comments_count > 0
        %li
          = link_to "New Comments (#{@unapproved_comments_count})", admin_stories_with_unapproved_comments_path
      %li
        = link_to "Featured Story", admin_featured_story_path
      %li
        = link_to "New Story", new_story_path
  %li
    %a.drop#resources Getting Started
    %ul.subnav#resources-subnav
      %li
        = link_to "Resources", admin_settings_resources_path if current_user
  %li
    %a.drop#admin-settings Admin Settings
    %ul.subnav#admin-settings-subnav
      %li
        = link_to "Alert Emails", admin_settings_settings_path
      %li
        = link_to "Admins", admin_settings_admins_path
